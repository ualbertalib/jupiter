<% page_title(@collection.title) %>

<h2 class="mt-3">
    <%= t('.header', title: @collection.title) %>
</h2>

<h5 class="mt-3">
  <%= link_to t('.parent_community', title: @community.title), community_path(@community) %>
</h5>

<div class="row mt-3">
  <div class="col">
    <div class="list-group">
      <% if @collection.member_works.count > 0 %>
        <% @collection.member_works.each do |w| %>
          <%= link_to w.title, work_path(w), class: 'list-group-item list-group-item-action' %>
        <% end %>
      <% else %>
          <%= t('.no_works_in_collection') %>
      <% end %>
    </div>
  </div>
</div>

<% if policy(@collection).edit? %>
  <div class="row mt-3" >
    <div class="col" >
      <%= link_to t('edit'),
                  edit_community_collection_path(@community, @collection),
                  class:'btn btn-secondary' %>
    </div>
  </div>
<% end %>
