<% page_title( t('.header')) %>
<% content_for :head do %>
  <meta name="robots" content="noindex" />
<% end %>
<div class="container mt-3">
  <ul class="nav nav-tabs">
    <% [:item, :collection, :community].each do |model| %>
      <%= results_model_tab_link(model) %>
    <% end %>
  </ul>

  <% if @results[@active_tab].count > 0 %>
    <%= render partial: 'model_results', locals: { results: @results[@active_tab], model: @active_tab,
                                        search_term: params[:search] } %>
  <% else %>
    <h1 class="mt-3"><%= t('.no_results_found') %></h1>
  <% end %>
</div>
