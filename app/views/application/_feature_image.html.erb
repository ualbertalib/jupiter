<% if policy(object).thumbnail? %>
  <% if feature_image.present? && image?(feature_image) %>
    <%= image_tag(url_for(feature_image), class: 'j-feature-image img-thumbnail', alt: '', size: '350x350') %>
  <% else %>
    <div class="d-flex justify-content-center align-items-center img-thumbnail p-5">
      <%= fa_icon file_icon(feature_image&.content_type), class: 'fa-5x text-muted' %>
    </div>
  <% end %>
<% else %>
  <%= image_tag('uofa-logo.png', class: 'j-feature-image img-thumbnail',  alt: '', size: '350x350') %>
<% end %>
