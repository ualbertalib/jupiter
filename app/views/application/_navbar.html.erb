<header class="j-header navbar navbar-light fixed-top navbar-expand-md bg-jupiter-primary">
  <nav class="container">

    <%= link_to root_path, class: 'navbar-brand' do %>
      <%= image_tag 'era-logo.png', width: '100', class: 'align-top d-none d-md-block',
          alt: t('.era_logo_alt') %>
      <%= image_tag 'era-logo-without-text.png', width: '100',
          class: 'd-inline-block align-top d-md-none', alt: t('.era_logo_alt') %>
    <% end %>

    <button type="button"
            class="navbar-toggler"
            data-toggle="collapse"
            data-target="#jupiter-main-nav"
            aria-controls="jupiter-main-nav"
            aria-expanded="false"
            aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="jupiter-main-nav" aria-expanded="false">
      <ul class="navbar-nav mr-auto d-none d-md-block w-100">

        <li role="presentation" class="nav-item mr-3">
          <form class="d-inline" action="<%= search_path %>">
            <div class="input-group" aria-label="navbar-search">
              <%= search_field_tag 'search', nil, placeholder: t('.search.placeholder'),
                  value: params[:search], id: 'navbar-search-lg', 'aria-label': 'search-box', class: "form-control" %>
              <div class="input-group-btn">
                <button type="submit" class="btn btn-secondary">
                  <%= fa_icon 'search' %>
                  <%= t('.search.button_text') %>
                </button>
              </div>
            </div>
          </form>
        </li>

      </ul>

      <ul class="navbar-nav pull-xs-right mr-2 float-right text-right">

        <li role="presentation" class="nav-item">
          <%= active_link_to t('.links.communities'), communities_path, class: "nav-link" %>
        </li>

        <li role="presentation" class="nav-item">
          <%= active_link_to t('.links.new_item'), create_draft_items_path, method: :post, class: "nav-link" %>
        </li>

        <li role="presentation" class="nav-item">
          <%= active_link_to t('.links.about'), '/about/#TODO', class: "nav-link" %>
        </li>

        <% if current_user.present? %>
          <li class="dropdown nav-item">
            <a href="#"
              role="button"
              id="jupiter-user-nav-downdown"
              class="dropdown-toggle nav-link text-nowrap"
              data-toggle="dropdown"
              aria-haspopup="true"
              aria-expanded="false">
              <%= current_user.name %>
            </a>

            <div role="menu" class="dropdown-menu dropdown-menu-right" aria-labelledby="#jupiter-user-nav-downdown">
              <div class="dropdown-header">
                <%= t('.user_dropdown.heading_html', name: current_user.name) %>
              </div>
              <div class="dropdown-divider"></div>
              <%= active_link_to t('.links.profile'), profile_path, class: 'dropdown-item' %>
              <div class="dropdown-divider"></div>
              <%= link_to t('.links.logout'), logout_path, class: 'dropdown-item' %>

              <% if session[:admin_id] %>
                <div class="dropdown-divider"></div>
                <%= link_to t('.links.logout_as_user'), logout_as_user_path, method: :post,
                    class: 'dropdown-item' %>
              <% end %>

              <% if current_user.admin? %>
                <div class="dropdown-divider"></div>
                <%= active_link_to t('.links.admin'), admin_root_path, class: 'dropdown-item' %>
              <% end %>
            </div>

          </li>
        <% else %>
          <li role="presentation" class="nav-item">
            <%= active_link_to t('.links.login'), '/auth/saml', class: 'nav-item nav-link text-nowrap' %>
          </li>
          <% if Rails.env.development? || Rails.env.uat? %>
            <%# TODO: Temporary login form for local development until IST shibboleth issues gets resolved %>
            <%= link_to t('.links.login_as_dev'), '/auth/developer', class: 'nav-item nav-link text-nowrap' %>
          <% end %>
        <% end %>
      </ul>
    </div>
  </nav>

  <div class="d-md-none my-3 w-100">
    <form action="<%= search_path %>">
      <div class="input-group container px-0" aria-label="navbar-search">
        <%= search_field_tag 'search', nil, placeholder: t('.search.placeholder'),
            value: params[:search], id: 'navbar-search-sm', 'aria-label': 'search-box', class: "form-control" %>
        <div class="input-group-btn">
          <button type="submit" class="btn btn-secondary" title="<%= t('.search.button_text') %>"
                  aria-label="search">
            <%= fa_icon 'search' %>
          </button>
        </div>
      </div>
    </form>
  </div>
</header>
