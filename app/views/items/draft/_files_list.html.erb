<div class="row p-3">
  <% if @draft.files.empty? %>
    <div class="col-md-12 text-center">
      <h4><%= t('.no_saved_files') %></h4>
    </div>
  <% else %>
    <div class="col-md-4">
      <div class="card mb-3">
        <h5 class="card-header"><%= t('.item_thumbnail') %></h5>
        <div class="card-body">
          <%= render partial: 'feature_image', locals: { object: @draft } %>
          <p class="text-muted mt-3"><%= t('.thumbnail_of_first_file') %></p>
        </div>
      </div>
    </div>
    <div class="col-md-8">
      <ul class="list-unstyled">
        <% @draft.files.each do |file| %>
          <%= render partial: 'items/draft/file', locals: { file: file } %>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>
