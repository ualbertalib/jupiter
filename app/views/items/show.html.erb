<% page_title(@item.title) %>

<h1 class="mt-3"><%= @item.title %></h1>

<div class="row mt-3">
  <div class="col">
    <div class="list-group">
      <% @item.display_attributes.each do |name, value| %>
        <div class="list-group-item">
          <%= "#{name.titlecase} : #{value}" %>
        </div>
      <% end %>
      <%# probably remove this if check below, just added to prevent this from 500ing %>
      <% if @item.member_of_paths %>
        <div class="list-group-item flex-column">
          <%= t('.member_of') %>
          <% @item.member_of_paths.each do |path| %>
            <div class="d-flex">
              <%= to_named_path(path) %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<div class="row mt-3">
  <div class="col">
    <h4><%= t('.contain_files') %></h4>
    <table class="table">
      <thead>
        <tr>
          <th><%= t('.fileset') %></th>
          <th><%= t('.original_filename') %></th>
          <th><%= t('.mime_type') %></th>
        </tr>
      </thead>
      <tbody></tbody>
    </table>
  </div>
</div>
