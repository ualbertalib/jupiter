<% page_title( t('.header', title: @item.title)) %>

<div class="item-breadcrumb">
  <% @item.each_community_collection do |community, collection| %>
    <ol class="breadcrumb mb-1">
      <li class="breadcrumb-item">
        <%= link_to(community.title, community_path(community)) %>
      </li>
      <li class="breadcrumb-item">
        <%= link_to(collection.title,
            community_collection_path(community, collection)) %>
      </li>
      <li class="breadcrumb-item active"><%= @item.title %></li>
    </ol>
  <% end %>
</div>

<h1 class="mt-3">
  <%= t('.header', title: @item.title) %>
</h1>
<div class="row mt-3">
  <div class="col">
    <div class="list-group">
      <% @item.display_attributes.each do |name, value| %>
        <div class="list-group-item">
          <%= "#{name.titlecase} : #{value}" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<div class="row mt-3">
  <div class="col">
    <h4><%= t('.contain_files') %></h4>
    <table class="table">
      <thead>
        <tr>
          <th><%= t('.fileset') %></th>
          <th><%= t('.original_filename') %></th>
          <th><%= t('.mime_type') %></th>
        </tr>
      </thead>
      <tbody></tbody>
    </table>
  </div>
</div>
