<ul class="list-group">
  <% if @item.languages.present? %>
    <li class="list-unstyled list-group-item-action">
      <dl>
        <dt><%= t('items.show.attributes.languages') %></dt>
        <dd>
          <ul class="list-unstyled">
            <% @item.languages.each do |language| %>
              <li><%= search_link_for(@item, :languages, value: language,
                      display: CONTROLLED_VOCABULARIES[:language].uri_to_text(language)) %></li>
            <% end %>
          </ul>
        </dd>
      </dl>
    </li>
  <% end %>

  <% if @item.contributors.present? %>
    <li class="list-unstyled list-group-item-action">
      <dl>
        <dt><%= t('items.show.attributes.contributors') %></dt>
        <dd>
          <ul class="list-unstyled">
            <% @item.contributors.each do |contributor| %>
              <li><%= search_link_for(@item, :all_contributors, value: contributor) %></li>
            <% end %>
          </ul>
        </dd>
      </dl>
    </li>
  <% end %>

  <% if @item.is_version_of.present? %>
    <li class="list-unstyled list-group-item-action">
      <dl>
        <dt><%= t('items.show.attributes.is_version_of') %></dt>
        <dd>
          <ul class="list-unstyled">
            <% @item.is_version_of.each do |thing| %>
              <li><%= thing %></li>
            <% end %>
          </ul>
        </dd>
      </dl>
    </li>
  <% end %>

  <% if @item.derived_from.present? %>
    <li class="list-unstyled list-group-item-action">
      <dl>
        <dt><%= t('items.show.attributes.derived_from') %></dt>
        <dd><%= @item.derived_from %></dd>
      </dl>
    </li>
  <% end %>

  <% if @item.related_link.present? %>
    <li class="list-unstyled list-group-item-action">
      <dl>
        <dt><%= t('items.show.attributes.related_link') %></dt>
        <dd><%= link_to @item.related_link, @item.related_link %></dd>
      </dl>
    </li>
  <% end %>
</ul>
