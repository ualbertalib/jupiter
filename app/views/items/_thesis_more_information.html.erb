<ul class="list-group">
  <%= render partial: 'application/show_metadata/language' %>

  <%= render partial: 'application/show_metadata/is_version_of' %>

  <% if @item.institution.present? %>
    <li class="list-unstyled list-group-item-action">
      <dl>
        <dt><%= t('.institution') %></dt>
        <dd><%= humanize_uri(:era, :institution, @item.institution) %></dd>
      </dl>
    </li>
  <% end %>

  <% if @item.thesis_level.present? %>
    <li class="list-unstyled list-group-item-action">
      <dl>
        <dt><%= t('.thesis_level') %></dt>
        <dd><%= @item.thesis_level %></dd>
      </dl>
    </li>
  <% end %>

  <% if @item.departments.present? %>
    <li class="list-unstyled list-group-item-action">
      <dl>
        <dt><%= t('.departments') %></dt>
        <dd>
          <ul class="list-unstyled">
            <% @item.departments.each do |department| %>
              <li><%= search_link_for(@item, :departments, value: department) %></li>
            <% end %>
          </ul>
        </dd>
      </dl>
    </li>
  <% end %>

  <% if @item.specialization.present? %>
    <li class="list-unstyled list-group-item-action">
      <dl>
        <dt><%= t('.specialization') %></dt>
        <dd>
          <ul class="list-unstyled">
            <li><%= @item.specialization %></li>
          </ul>
        </dd>
      </dl>
    </li>
  <% end %>

  <% if @item.supervisors.present? %>
    <li class="list-unstyled list-group-item-action">
      <dl>
        <dt><%= t('.supervisors') %></dt>
        <dd>
          <ul class="list-unstyled">
            <% @item.supervisors.each do |supervisor| %>
              <li><%= search_link_for(@item, :supervisors, value: supervisor) %></li>
            <% end %>
          </ul>
        </dd>
      </dl>
    </li>
  <% end %>

  <% if @item.committee_members.present? %>
    <li class="list-unstyled list-group-item-action">
      <dl>
        <dt><%= t('.committee_members') %></dt>
        <dd>
          <ul class="list-unstyled">
            <% @item.committee_members.each do |committee_member| %>
              <li><%= committee_member %></li>
            <% end %>
          </ul>
        </dd>
      </dl>
    </li>
  <% end %>

</ul>
