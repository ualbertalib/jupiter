<% page_title(t('.header')) %>

<div class="container mt-3">
  <%= render partial: 'progress_bar' %>

  <h2 class="mt-3">
    <%= icon(t('.header_icon_type'), t('.header_icon')) %>
    <%= t('.header') %>
  </h2>


  <% if @draft.errors.any? %>
    <ul class="list-unstyled alert alert-danger">
      <% @draft.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= simple_form_for @draft,
                      url: admin_thesis_files_path,
                      method: :post,
                      html: {
                        id: :upload_files_form,
                        multipart: true,
                        class:'js-files-dropzone'
                      } do |f| %>

    <div class="row">
      <div class="col">
        <button type="button" class="btn btn-primary js-add-files">
          <%= icon('far', 'copy') %>
          <%= t('.attach_files') %>
        </button>
      </div>
    </div>

    <div class="row p-5 m-3 border js-add-files">
      <div class="col">
        <h4 class="text-center">
          <%= t('.upload_files_instructions') %>
        </h4>
        <ul id="js-previews-list" class="list-unstyled">
        </ul>
        <div class="fallback">
          <strong><%= t('.no_js_fallback') %></strong>
        </div>
      </div>
    </div>

  <% end %>

  <%# Code below is used as the dropzone previewTemplate, will not be displayed to user %>
  <ul id="js-dropzone-preview-template" class="d-none">
    <li class="media my-3 p-3 border">
      <div class="media-body">
        <h5 data-dz-name></h5>
        <strong class="text-danger" data-dz-errormessage></strong>
        <p data-dz-size></p>
        <div class="progress">
          <div class="progress-bar progress-bar-striped bg-success progress-bar-animated"
                data-dz-uploadprogress
                role="progressbar"
                aria-valuenow="0"
                aria-valuemin="0"
                aria-valuemax="100"></div>
        </div>
      </div>
    </li>
  </ul>


  <%= simple_form_for @draft,
                      url: wizard_path,
                      method: :put,
                      html: { class:'js-deposit-item' } do |f| %>

    <h4><%= t('.saved_files') %></h4>
    <div id="js-files-list">
      <%= render partial: 'files_list' %>
    </div>

    <div class="mt-3 d-flex flex-wrap justify-content-end">
      <%= link_to previous_wizard_path, class: 'btn btn-secondary mr-2 mb-2 mb-md-0' do %>
        <%= icon('fas', 'chevron-left') %>
        <%= t('admin.theses.draft.previous') %>
      <% end %>
      <%= button_tag type: :submit, class: 'btn btn-primary' do %>
        <%= t('admin.theses.draft.save_and_continue') %>
        <%= icon('fas', 'chevron-right') %>
      <% end %>
    </div>
  <% end %>
</div>
