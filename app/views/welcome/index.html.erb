<section class="jumbotron j-jumbotron-banner">
  <div class="container">
    <div class="col-md-6">
      <h1 class="jumbotron-heading display-4"><%= t('.welcome_header_html') %></h1>
      <h2 class="mt-3"><%= t('.welcome_lead')%></h2>
    </div>
  </div>
</section>

<div class="container">
  <div class='d-flex flex-wrap align-items-center justify-content-between my-3'>
    <h2>
      <%= t('.explore_collections') %>
    </h2>

    <%= link_to t('view_more'), communities_path, class: "btn btn-secondary", 'aria-label' => "Check out more of ERA's communities and collections" %>
  </div>

  <%# Collection images, shown only on larger screens %>
  <div class="d-none d-md-block">
    <div class="d-flex flex-row">
      <div class="j-image-with-text mx-3 col-md-3">
        <%= link_to community_collection_path(FeaturedCollection.afns_community,
          FeaturedCollection.afns_journals_collection) do %>
          <%= image_tag 'dept-of-agriculture.jpg', alt: '',
              class: 'agriculture' %>
          <h3 class="h5"><%= t('.afns_collection') %></h3>
        <% end %>
      </div>

      <div class="d-flex flex-column align-items-end">

        <div class="d-flex flex-row mb-3">
          <div class="j-image-with-text mr-3">
            <%= link_to community_path(FeaturedCollection.research_images_community) do %>
              <%= image_tag 'images-of-research.jpg', alt: '',
                  title: t('.images_of_research_attribution') %>
              <h3 class="h5"><%= t('.images_of_research_collection') %></h3>
            <% end %>
          </div>

          <div class="j-image-with-text">
            <%= link_to community_collection_path(FeaturedCollection.grad_studies_community,
              FeaturedCollection.thesis_collection) do %>
              <%= image_tag 'theses.jpg', alt: '' %>
              <h3 class="h5"><%= t('.theses_collection') %></h3>
            <% end %>
          </div>

        </div>

        <div class="j-image-with-text mt-auto">
          <%= link_to community_path(FeaturedCollection.osrin_community) do %>
            <%= image_tag 'oil-sands.jpg', alt: '',
                title: t('.osrin_attribution') %>
            <h3 class="h5"><%= t('.osrin_collection') %></h3>
          <% end %>
        </div>

      </div>
    </div>
  </div>

  <%# List of collection links, shown only on smaller screens %>
  <div class="d-md-none list-group">
    <%= link_to t('.afns_collection'), community_collection_path(FeaturedCollection.afns_community,
      FeaturedCollection.afns_journals_collection),
      class: 'list-group-item list-group-item-action list-group-item-primary mb-3 text-dark' %>

    <%= link_to t('.images_of_research_collection'), community_path(FeaturedCollection.research_images_community),
      class: 'list-group-item list-group-item-action list-group-item-primary mb-3 text-dark' %>

    <%= link_to t('.theses_collection'), community_collection_path(FeaturedCollection.grad_studies_community,
      FeaturedCollection.thesis_collection),
      class: 'list-group-item list-group-item-action list-group-item-primary mb-3 text-dark' %>

    <%= link_to t('.osrin_collection'), community_path(FeaturedCollection.osrin_community),
      class: 'list-group-item list-group-item-action list-group-item-primary mb-3 text-dark' %>
  </div>

  <div class="row mt-5">
    <div class="col-md-6 offset-md-3">
      <%= link_to 'https://era-av.library.ualberta.ca', target: :_blank, rel: 'noopener', class: 'media bg-light p-3 border border-primary rounded text-decoration-none' do %>
        <%= fa_icon 'play-circle-o 4x', class: 'mr-3' %>
        <div class="media-body text-dark">
          <h4>
            <%= t('.era_av_header') %>
          </h4>
          <p class="mb-0">
            <%= t('.era_av_text') %>
          </p>
        </div>
      <% end %>
    </div>
  </div>

</div>
